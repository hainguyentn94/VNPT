@model List<Models.Framework.QUANG_CAO>
@{
    ViewBag.Title = "Quảng Cáo";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
}

<section>
    <div id="wrapper">
        <div id="page-wrapper">
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <p style="padding:0px; margin:0px; width:100%;"><b style="font-size:20px;">DANH SÁCH QUẢNG CÁO</b><input style="float:right;" type="button" class="btn btn-primary" name="btnthem" value="Thêm mới Quảng cáo" data-toggle="modal" data-target="#them" /></p>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="font-size:12px;">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>TÊN</th>
                                        <th>LINK</th>
                                        <th>HÌNH ẢNH</th>
                                        <th>THAO TÁC</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i<input type="hidden" value="@item.ID" id="maphong-@item.ID" /></td>
                                            <td>@item.TENQC<input type="hidden" value="@item.TENQC" id="tenphong-@item.ID" /></td>
                                            <td>@item.LINK<input type="hidden" value="@item.LINK" id="motaphong-@item.ID" /></td>
                                            <td><img src="@item.HINH" style="width:250px; height:40px;"><input type="hidden" value="@item.HINH" id="ulrimage-@item.ID" /></td>
                                            <td>
                                                <a title="Sửa" data-toggle="modal" href="#sua" onclick="setData(@item.ID)" class="glyphicon glyphicon-pencil"></a>
                                                <a title="Xóa" data-toggle="modal" href="#xoa" onclick="deleteItem(@item.ID)" class="glyphicon glyphicon-remove"></a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!--Them-->
<div id="them" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Thêm Quảng cáo</h4>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    @using (Html.BeginForm("them", "Phong", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                    {
                                        <div class="form-group">
                                            <label>Tên loại phòng</label>
                                            @Html.TextBox("txttenloaiphong", null, new { @class = "form-control", @type = "text", @id = "itenp" })
                                        </div>
                                        <div class="form-group">
                                            <label>Thông tin mô tả</label>
                                            @Html.TextArea("txtmotaphong", null, new { @class = "form-control", @rows = "3", @id = "imota" })
                                        </div>
                                        <div class="form-group">
                                            <label>Ảnh Loại phòng</label>
                                            @Html.TextBox("txturlphong", null, new { @class = "form-control", type = "file" })
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary" onclick="check()">Thêm</button>
                                            <button type="reset" class="btn btn-primary">Nhập lại</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--sua-->
<div id="sua" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Sửa thông tin loại phòng</h4>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="modal-body">
                                        @using (Html.BeginForm("capnhat", "Phong", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                        {  <div class="form-group">
                                            <label>Tên loại phòng</label>
                                            @Html.TextBox("txtmap", null, new { @class = "form-control", @type = "hidden", @id = "map" })
                                            @Html.TextBox("txttenp", null, new { @class = "form-control", @type = "text", @id = "tenp" })
                                        </div>

                                        <div class="form-group">
                                            <label>Thông tin mô tả</label>
                                            @Html.TextArea("txtmotap", null, new { @class = "form-control", @rows = "3", @id = "motap" })
                                        </div>
                                        <div class="form-group">
                                            <label>Ảnh Loại phòng</label>
                                            @Html.TextBox("txtulrp1", null, new { @class = "form-control", @type = "hidden", @id = "ulri1" })
                                            @Html.TextBox("txtulrp", null, new { @class = "form-control", @type = "file", @id = "ulri" })
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary" onclick="checkup()">Cập nhật</button>
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy</button>
                                        </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--xoa-->
<section>
    <div id="xoa" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Bạn có chắc chắn muốn xóa không ?</h4>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="modal-body">
                                            @using (Html.BeginForm("xoaphong", "Phong", FormMethod.Post))
                                            {
                                                <div class="form-group">
                                                    @Html.TextBox("txtidp", null, new { @class = "form-control", @type = "hidden", @id = "idphong" })
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBox("txtip", null, new { @class = "form-control", @type = "hidden", @id = "image" })
                                                </div>
                                                <div align="center">
                                                    <button type="submit" style="float:left" class="btn btn-primary">Yes</button>
                                                    <button type="button" style="float:right" class="btn btn-primary" data-dismiss="modal">No</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>