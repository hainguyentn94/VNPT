@model List<Models.Framework.DANH_MUC_LOAI_PHONG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
}
<section>
<script>
    $(document).on("click", ".add-id", function () {
        var myBookId = $(this).data('id');
        $(".modal-body #bookId").val(myBookId);
    });
</script>
    <div id="wrapper">
        <div id="page-wrapper">
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <p>Danh sách loại phòng<input type="button" name="btnthem" value="Thêm loại phòng" data-toggle="modal" data-target="#them" /></p>

                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên loại phòng</th>
                                        <th>Mô tả</th>
                                        <th>Ảnh phòng</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                        int id = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.TENLOAIPHONG</td>
                                        <td>@item.MOTA</td>
                                        <td><img src="@item.URLIMAGE" style="width:150px; height:80px;"></img></td>
                                        <td>
                                            <a data-toggle="modal" href="#sua" onclick="document.getElementById('map').value = @item.MALOAIPHONG; document.getElementById('tenp').value =@item.TENLOAIPHONG" class="add-id glyphicon glyphicon-pencil"></a> 
                                            <a data-toggle="modal" href="#xoa" class="glyphicon glyphicon-remove"></a>
                                        </td>
                                    </tr>
                                        i++;
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!--Them-->
<div id="them" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Thêm loại phòng</h4>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                                    @using (Html.BeginForm("them", "Phong", FormMethod.Post))
                                    {
                                        <div class="form-group">
                                            <label>Tên loại phòng</label>
                                            @Html.TextBox("txttenloaiphong", null, new { @class = "form-control", @type = "text" })
                                        </div>
                                        <div class="form-group">
                                            <label>Thông tin mô tả</label>
                                            @Html.TextArea("txtmotaphong", null, new { @class = "form-control", @rows = "3" })
                                        </div>
                                        <div class="form-group">
                                            <label>Ảnh Loại phòng</label>
                                            @Html.TextBox("txturlphong", null, new { @class = "form-control", type = "file" })
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary">Thêm</button>
                                            <button type="reset" class="btn btn-primary">Nhập lại</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--sua-->
<div id="sua" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Sửa loại phòng</h4>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="modal-body"
                                    <form role="form" method="post">
                                        <div class="form-group">
                                            @Html.TextBox("txttieude", null, new { @class = "form-control", @type = "hidden", @id = "map" })
                                            <label>Tên loại phòng</label>
                                            @Html.TextBox("txttieude",null, new { @class = "form-control", @type = "text", @id = "tenp" })
                                        </div>

                                        <div class="form-group">
                                            <label>Thông tin mô tả</label>
                                            @Html.TextArea("txtnoidung", null, new { @class = "form-control", @rows = "3" })
                                        </div>
                                        <div class="form-group">
                                            <label>Ảnh Loại phòng</label>
                                            @Html.TextBox("txtulr", null, new { @class = "form-control", type = "file" })
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                                            <button type="reset" class="btn btn-primary">Nhập lại</button>
                                        </div>
                                    </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--xoa-->
<section>
    <div id="xoa" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Xóa loại phòng</h4>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="panel-body">
                                            <input type="checkbox" />Bạn chắc chắn muốn xóa không ?
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary">Yes</button>
                                            <button type="reset" class="btn btn-primary">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>