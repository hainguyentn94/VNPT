@model List<Models.Framework.DANH_SACH_KHACH_HANG1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
}
<section>
    <div id="wrapper">
        <div id="page-wrapper">
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <p style="padding:0px; margin:0px; width:100%;"><b style="font-size:20px;">DANH SÁCH KHÁCH HÀNG</b></p>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            @using (Html.BeginForm("xoakh", "Khachhang", FormMethod.Post))
                            {
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="font-size:10px;">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>STT</th>
                                            <th>HỌ TÊN</th>
                                            <th>ĐỊA CHỈ</th>
                                            <th>NGÀY SINH</th>
                                            <th>ĐIỆN THOẠI</th>
                                            <th>EMAIL</th>
                                            <th>SỐ GIẤY TỜ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 1;
                                        }
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="text-align:center;"><input type="checkbox" class="checkbox" name="ck-@item.MAKHACHHANG1" /></td>
                                                <td style="text-align:center;">@i</td>
                                                <td>@item.HOTEN1</td>
                                                <td>@item.ALLDIACHI</td>
                                                <td>
                                                    @{
                                                        string foo = item.NGAYSINH1.ToString();
                                                        DateTime bar = DateTime.Parse(foo);
                                                        string output = bar.ToString("dd/MM/yyyy");
                                                    }
                                                    @output
                                                </td>
                                                <td>@item.SODIENTHOAI1</td>
                                                <td>@item.EMAIL1</td>
                                                <td>@item.SOGIAYTO1</td>
                                            </tr>
                                                            i++;
                                                        }
                                    </tbody>
                                </table>
                                <input type="submit" class="btn btn-primary" value="Xóa" />                                                        }
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
    </div>
</section>
