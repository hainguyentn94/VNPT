@model List<Models.Framework.KHUYEN_MAI>
@{
    ViewBag.Title = "Thông tin khuyến mại";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<section class="about mt50">
    <div class="col-md-12">
        <h2 class="lined-heading bounceInRight appear animated" data-start="800"><span style="text-transform:uppercase">Khuyến mại</span></h2>
        <div class="container">
            <div class="row">
                <!-- dv1 -->
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <a href="~/Sale/Details/?Id=@item.MAKHUYENMAI">
                                <img src=@item.URLANH alt="Lights" style="width:100%">
                                <div class="caption">
                                    <p><h4>@item.TIEUDEKHUYENMAI</h4></p>
                                </div>
                            </a>
                        </div>
                    </div>
                }       
                <!-- dv1 -->
            </div>
        </div>
    </div>
</section>

