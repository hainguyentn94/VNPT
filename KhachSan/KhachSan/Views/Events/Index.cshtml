@{
    ViewBag.Title = "Trang Tổ Chức Sự Kiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KhachSan.Models.EventsModel
<section class="about mt50">
    <div class="col-md-12">
        <h2 class="lined-heading bounceInRight appear animated" data-start="800"><span style="text-transform:uppercase">Tổ chức sự kiện</span></h2>
        <div class="container">
            <div class="row">
                <!-- dv1 -->
                @foreach (var test in ViewBag.Test)
                {
                    using (Html.BeginForm("Details", "Events"))
                    {
                        <div class="col-md-4">
                            <div class="thumbnail ">
                                <img src="~/Image/Intro/intro.jpg" class="btn-sm" alt="Lights" style="width:100%">
                                <a href="~/Events/Details">
                                    <div class="caption">
                                        @{
                                            var content = test;
                                        }
                                        <input class="btn btn-danger btn-lg btn-group-justified btn-block" type="submit" value="@content" name="content" />
                                    </div>
                                </a>
                            </div>
                        </div>
                                                }
                                            }
            </div>
        </div>
    </div>
</section>
