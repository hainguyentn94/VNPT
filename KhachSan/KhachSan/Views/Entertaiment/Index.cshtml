@model IEnumerable<KhachSan.Models.DICH_VU_TIEN_ICH_selectallvi_Result>
@{
    ViewBag.Title = "Hoạt động giải trí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="about mt50">
    <div class="col-md-12">
        <h2 class="lined-heading bounceInRight appear animated" data-start="800"><span style="text-transform:uppercase">Hoạt động giải trí</span></h2>
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    using (Html.BeginForm("Details", "Entertaiment", new { id = item.ID }))
                    {
                        <div class="col-md-4">
                            <div class="thumbnail">
                                <a href="~/Entertaiment/Details/@item.ID">
                                    <img src="@item.URL" alt="Lights" class="img-rounded" style="width:100%; padding-bottom:10px">
                                    @{
                                        //<p>@Html.DisplayFor(model => item.ID)</p>
                                        @Html.HiddenFor(model => item.ID)
                                        var a = item.TENDV_VI;
                                        var content = item.ID;
                                        <input class="btn btn-danger btn-md btn-group-justified btn-block" id="@content" type="submit" value="@a" />
                                    }
                                </a>
                            </div>
                        </div>
                                            }
                                        }
            </div>
        </div>
    </div>
</section>
