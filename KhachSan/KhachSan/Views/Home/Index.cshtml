<section class="rooms mt50">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="lined-heading bounceIn appear animated" data-start="0"><span style="text-transform:uppercase">Phòng</span></h2>
            </div>
        </div>
        <div class="row fadeIn appear animated">
            <!-- Room -->
